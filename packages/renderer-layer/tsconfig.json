{
  "extends": "@sofie-automation/code-standard-preset/ts/tsconfig.lib",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules/**",
    "src/**/*spec.ts",
    "src/**/__tests__/*",
    "src/**/__mocks__/*"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": [
        "./node_modules/*"
      ],
      "@ograf-server/controller": [
        "./src/index.ts"
      ]
    },
    "jsx": "react",
    "types": [],
    "lib": [
      "DOM",
      "ES2024"
    ],
  }
}
